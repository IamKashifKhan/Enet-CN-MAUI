     <TabBar>
        <ShellContent  Title="Feed" Route="FeedPage" ContentTemplate="{DataTemplate controls:FeedPage}" >
            <ShellContent.Icon>
                 <FontImageSource FontFamily="FontAwesome"  Glyph="{x:Static fontawesome:FontAwesomeIcons.MoneyCheck}" /> <!-- Home icon -->
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent  Title="Businesses" Route="BusinessesPage" ContentTemplate="{DataTemplate controls:BusinessesPage}">
            <ShellContent.Icon>
                 <FontImageSource FontFamily="FontAwesome"  Glyph="{x:Static fontawesome:FontAwesomeIcons.Shop}"  /> <!-- Home icon -->
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent  Title="Offers" Route="OffersPage" ContentTemplate="{DataTemplate controls:OffersPage}" >
            <ShellContent.Icon>
                 <FontImageSource FontFamily="FontAwesome"  Glyph="{x:Static fontawesome:FontAwesomeIcons.Scissors}"  /> <!-- Home icon -->
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent   Title="More" Route="MorePage" ContentTemplate="{DataTemplate controls:MorePage}" >
            <ShellContent.Icon>
                 <FontImageSource FontFamily="FontAwesome"  Glyph="{x:Static fontawesome:FontAwesomeIcons.EllipsisVertical}"  /> <!-- Home icon -->
            </ShellContent.Icon>
        </ShellContent>
     </TabBar>
   
</Shell>