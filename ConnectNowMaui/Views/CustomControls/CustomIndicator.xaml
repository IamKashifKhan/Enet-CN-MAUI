<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConnectNow.Views.CustomControls.CustomIndicator"
             InputTransparent="False">
    <Grid   HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <StackLayout BackgroundColor="Black" Opacity="0.3" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                     InputTransparent="False" x:Name="mainStack"/>
        <ActivityIndicator IsRunning="True" HorizontalOptions="Center" VerticalOptions="Center"
                               WidthRequest="60" HeightRequest="60" Color="#1D2C4C"/>
    </Grid>
</ContentView>
